<!-- 设置形状不同的机器人部件-->
<robot name = "mycar">
   <link name = "base_link">
   <!--可视化标签-->
      <visual>
          <!--形状-->
          <geometry>
             <!--立方体-->
             <box size = "0.3 0.2 0.1"/>
             <!--圆柱-->
             <!--<cylinder radius = "0.1" length = "2"/>-->
             <!--球体-->
             <!--<sphere radius = "1"/>-->
             <!--皮肤-->
             <!--<mesh filename = "packge://包名/mseshes/文件"/>-->
          </geometry>

          <!--偏移量-->
          <!--xyz 上的偏移量 rpy x 翻滚, y 俯仰 z 偏航-->
          <origin  xyz = "3 0 0 " rpy = "0 0 0"   />

         <!--颜色-->
         <material name = "car_color">
             <!--a是透明度，全在0-1之间-->
            <color rgba = "1 1 0 1" />
         </material>
          
          <!--颜色-->
      </visual>
   </link>
</robot>